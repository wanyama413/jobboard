{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/layout.jsx",
    "app/(auth)/sign-up/[[...sign-up]]/page.jsx",
    "app/(auth)/sign-up/[[...sign-up]]/layout.jsx",
    "app/(auth)/sign-in/[[...sign-in]]/page.jsx",
    "app/layout.jsx"
  ],
  "exclude": ["node_modules"]
}
